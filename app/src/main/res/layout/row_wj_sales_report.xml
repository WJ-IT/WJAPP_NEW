<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="45dp"
                                             android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/llSalesReport"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView125">

        <TextView
                android:text="col1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/salesCol1"
                android:layout_weight="18"
                android:gravity="center"
                android:paddingRight="3dp"
                android:textSize="14dp"
                android:textColor="@android:color/black"/>

        <TextView
                android:text="col2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/salesCol2"
                android:layout_weight="27"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@android:color/black"/>

        <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="col3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/salesCol31"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:textColor="@android:color/black"/>

                <TextView
                        android:text="col4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/salesCol4"
                        android:layout_weight="7"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="col5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/salesCol5"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:textColor="@android:color/black"/>

                <TextView
                        android:text="col6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/salesCol6"
                        android:layout_weight="7"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:textColor="@android:color/black"/>
            </TableRow>

        </TableLayout>

        <TextView
                android:text="col7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/salesCol7"
                android:layout_weight="20"
                android:gravity="end"
                android:textSize="14dp"
                android:paddingEnd="8dp"
                android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView125"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="#80C0C0C0"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</android.support.constraint.ConstraintLayout>