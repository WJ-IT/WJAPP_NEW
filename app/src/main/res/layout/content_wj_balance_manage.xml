<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_wj_balance_manage"
        tools:context=".WjBalanceManageActivity"
        android:background="#E6E6E6"
        android:id="@+id/clBalanceManage">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout9"
            android:background="#FFFFFF">

        <TextView
                android:text="담당팀 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView97"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_Manager"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="8dp"
                android:textColor="#000000"/>

        <TextView
                android:text="기준일 :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView76"
                android:layout_weight="15"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14dp"/>

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_bm_date"
                android:layout_weight="30"
                android:gravity="start"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textSize="14dp"/>

        <Button
                android:text="조회"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_balance_manage"
                android:layout_weight="1"
                style="@style/ButtonTheme"/>
    </LinearLayout>

    <TextView
            android:text="txt_company"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
            android:background="@color/dialog_bottom"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            android:id="@+id/rvBalaceManage"
            android:layout_marginTop="16dp"/>

</android.support.constraint.ConstraintLayout>