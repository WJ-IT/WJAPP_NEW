<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_wj_jaego_report"
        tools:context=".WjJaegoReportActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/linearLayout15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginTop="3dp">

        <TextView
                android:text="창고선택"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="30"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14dp"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spin_loc"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_weight="70">

        </Spinner>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scrollbars="horizontal"
            android:id="@+id/product_listview"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout15"
            android:layout_marginTop="3dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_listview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:id="@+id/ll_jaego_col"
            android:background="@drawable/search_background"
            android:layout_marginTop="2dp"
            android:visibility="visible">

        <TextView
                android:text="규격"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="20"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                />

        <TextView
                android:id="@+id/txt_sub01_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub02_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub03_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub04_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub05_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub06_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub07_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_sub08_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sub09_multi"
                android:layout_weight="10"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="14dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sub10_multi"
                android:layout_weight="10"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="14dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/jaego_listview"
            app:layout_constraintTop_toBottomOf="@+id/ll_jaego_col"/>

</android.support.constraint.ConstraintLayout>