<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="35dp"
                                             android:id="@+id/cl_cdialog_row">

    <TextView
            android:text="S5132475"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jaego_cd_serial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:textSize="14dp"/>

    <TextView
            android:text="101"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jaego_cd_axis"
            app:layout_constraintStart_toEndOf="@+id/txt_jaego_cd_serial"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14dp"/>

    <TextView
            android:text="비고"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jaego_cd_remark"
            app:layout_constraintStart_toEndOf="@+id/txt_jaego_cd_axis"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_jaego_cd_loc"
            android:ellipsize="marquee"
            android:textSize="14dp"/>

    <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jaego_cd_loc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:textSize="14dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView77"
            app:layout_constraintTop_toBottomOf="@+id/txt_jaego_cd_axis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#7CC0C0C0"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
</android.support.constraint.ConstraintLayout>