<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_wj_order_report"
        tools:context=".WjOrderReportActivity"
        android:id="@+id/layout_main_order">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linear_search_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:text="주문등록 날짜선택"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:layout_weight="18"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:gravity="end"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etxt_dtfr_orderR"
                android:layout_weight="32"
                android:background="@android:drawable/editbox_background_normal"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:textSize="14dp"
                android:layout_marginStart="4dp"
                android:selectAllOnFocus="true"
                android:gravity="center"/>

        <TextView
                android:text="~"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView99"
                android:layout_weight="5"
                android:gravity="center"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etxt_dtto_orderR"
                android:layout_weight="32"
                android:background="@android:drawable/editbox_background_normal"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:textSize="14dp"
                android:selectAllOnFocus="true"
                android:gravity="center"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView100"
                android:layout_weight="5"/>

        <Button
                android:text="@android:string/search_go"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:id="@+id/btn_serarchOrder"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                style="@style/ButtonTheme"/>

    </LinearLayout>

    <TableLayout
            android:id="@+id/tableLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_search_order">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/textView39"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="start"
                    android:text="주문일"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView44"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:text="유형"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView42"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:text="거래처명"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView46"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="end"
                    android:text="수량"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

            <TextView
                    android:id="@+id/textView52"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/dot" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/textView41"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="start"
                    android:text="수술일"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView49"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="품명"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView48"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="55"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:text="규격"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

            <TextView
                    android:id="@+id/txt_scanName"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/dot" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/textView29"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="start"
                    android:text="출고일"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:text="비고"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            <TextView
                    android:id="@+id/textView31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="end"
                    android:text="주문취소"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

        </TableRow>
    </TableLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rvOrderReportList"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout5"/>
</android.support.constraint.ConstraintLayout>