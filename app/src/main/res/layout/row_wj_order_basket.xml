<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_row_basket"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tl_row_basket"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="90">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_itembasket"
                        android:layout_weight="80"
                        android:textSize="14dp"
                        android:gravity="start"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_qtybasket"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:textSize="14dp"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_gbnbasket"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:maxLines="1"
                        android:textSize="14dp"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:id="@+id/textView26"
                        android:layout_weight="1"
                        android:background="@drawable/dot"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_patientbasket"
                        android:layout_weight="15"
                        android:gravity="start"
                        android:textSize="14dp"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_remarkbasket"
                        android:layout_weight="85"
                        android:singleLine="false"
                        android:focusable="auto"
                        android:maxLines="1"
                        android:gravity="start"
                        android:textSize="14dp"/>

            </TableRow>

        </TableLayout>

        <Button
                android:text="삭제"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_delbasket"
                android:layout_weight="10"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_light"
                android:textSize="14dp"/>

    </LinearLayout>

    <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_row_basket"
            android:background="@color/dialog_bottom"/>
</android.support.constraint.ConstraintLayout>