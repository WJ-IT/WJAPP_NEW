<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main_menu"
        tools:context=".MainMenuActivity"
        android:id="@+id/main_layer"
        android:background="@android:color/white"
        tools:layout_editor_absoluteY="25dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:gravity="center">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/wjicon"
                android:id="@+id/main_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_weight="2"
                android:layout_gravity="center"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/main_title"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_logo"
                android:layout_weight="7"
                android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cLayout01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lLayout01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp">

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:id="@+id/btn_bluetooth"
                        app:srcCompat="@drawable/blue_tooth"
                        android:background="@drawable/main_button"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="8dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"/>

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        app:srcCompat="@drawable/jaego_scan"
                        android:id="@+id/btn_scan"
                        android:background="@drawable/main_button"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteY="8dp"
                        tools:layout_editor_absoluteX="215dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lLayout02"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lLayout01"
                    android:layout_marginTop="16dp">

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:id="@+id/btn_result"
                        app:srcCompat="@drawable/search_result"
                        android:background="@drawable/main_button"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="16dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        />

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        app:srcCompat="@drawable/jaepum_search"
                        android:id="@+id/btn_search"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/main_button"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toBottomOf="@+id/btn_scan"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lLayout03"
                    app:layout_constraintTop_toBottomOf="@+id/lLayout02"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp">

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:id="@+id/btn_visit"
                        app:srcCompat="@drawable/schedule"
                        android:background="@drawable/main_button"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"/>

                <ImageButton
                        android:id="@+id/btn_etc"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button"
                        android:scaleType="fitCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_search"
                        app:srcCompat="@android:drawable/ic_menu_compass" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>